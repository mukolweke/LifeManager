<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-user-lock"></i>  Forget Password</h1>
      <p class="lead mt-4 text-center">Please provide an email to verify you.</p>
      <%- include('../partials/messages.ejs');%>
      <form action="/users/forgot-pass" method="POST" novalidate>
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Reset Password</button>
      </form>
      <p class="lead mt-4 text-center">
        Amnesia gone? <a href="/users/login">Login</a>
    </div>
  </div>
</div>