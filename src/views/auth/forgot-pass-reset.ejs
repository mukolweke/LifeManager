<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-user-lock"></i>  Reset Password</h1>
      <p class="lead mt-4 text-center"><%= user.name %>, please fill fields below to reset password.</p>
      <%- include('../partials/messages.ejs');%>
      <form action="/users/forgot-pass-reset" method="POST" novalidate>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <div class="form-group">
          <label for="password_confirm">Password Confirm</label>
          <input
            type="password"
            id="password_confirm"
            name="password_confirm"
            class="form-control"
            placeholder="Confirm Password"
          />
        </div>
        <input
            type="text"
            id="user_id"
            name="user_id"
            class="d-none"
            value="<%= user._id %>"
          />
        <button type="submit" class="btn btn-primary btn-block">Reset</button>
      </form>
    </div>
  </div>
</div>